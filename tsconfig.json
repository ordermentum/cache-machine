{
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "target": "es2019",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}